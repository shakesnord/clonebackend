generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum CredentialType {
  GMAIL
  OFFICE
  OUTLOOK
  EXCHANGE
  YAHOO
  ICLOUD
  AOL
  LOOK
}

model User {
  id               String              @id @default(auto()) @map("_id") @db.ObjectId
  firstName        String?
  lastName         String?
  phoneNumber      String?
  profilePhoto     String?
  
  gmailEmail       String?  @unique
  gmailPassword    String?

  officeEmail      String?  @unique
  officePassword   String?

  outlookEmail     String?  @unique
  outlookPassword  String?

  exchangeEmail    String?  @unique
  exchangePassword String?

  yahooEmail       String?  @unique
  yahooPassword    String?

  icloudEmail      String?  @unique
  icloudPassword   String?

  aolEmail         String?  @unique
  aolPassword      String?

  credentialType   CredentialType?
  emailVerified    Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
